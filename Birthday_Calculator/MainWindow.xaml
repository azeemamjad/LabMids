<Window x:Class="Birthday_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Birthday_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="CornflowerBlue"></Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="50">Please Choose Your Date Of Birth</Label>
            <DatePicker Grid.Row="1" FontSize="40" x:Name="datetimepicker_" SelectedDateChanged="datetimepicker__SelectedDateChanged"></DatePicker>
            <Label FontSize="50" Grid.Row="2">Your Age is</Label>
            <TextBlock x:Name="agetxtblock" Grid.Row="3" FontSize="40"></TextBlock>
        </Grid>
    </Grid>
</Window>
